[colors]
    aqua = #03A9F4
    black = #212121
    blue = #2196F3
    bluegray = #607D8B
    brown = #795548
    forest = #009688
    gold = #FFC107
    gray = #9E9E9E
    green = #4CAF50
    indigo = #3F51B5
