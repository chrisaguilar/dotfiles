[colors]
    black = #000000
    red = #e06c75
    white = #abb2bf

[bar/main]
    monitor = ${env:MONITOR:}

    bottom = true
    width = 100%
    height = 25
    offset-x = 0%
    offset-y = 0%
    background = ${colors.black}
    foreground = ${colors.white}

    underline-size = 1

    padding = 1
    module-margin = 1

    font-0 = "FiraMono:size=10;2"
    font-1 = "Font Awesome 5 Free:style=Regular:size=10;2"
    font-2 = "Font Awesome 5 Free:style=Solid:size=10;2"
    font-3 = "Font Awesome 5 Brands:style=Regular:size=10;2"
    font-4 = "Noto Sans Mono CJK JP:size=10;2"
    font-5 = "Noto Sans Mono CJK KR:size=10;2"
    font-6 = "Noto Sans Mono CJK SC:size=10;2"
    font-7 = "Noto Sans Mono CJK TC:size=10;2"
    font-8 = "DejaVu Sans Mono:size=10;2"

    modules-left = i3 title
    modules-center =
    modules-right = pulseaudio backlight battery cpu memory temperature weather date

    tray-position = right

    wm-name = i3
    enable-ipc = true
    scroll-up = i3wm-wsnext
    scroll-down = i3wm-wsprev

[bar/secondary]
    monitor = ${env:MONITOR:}

    bottom = true
    width = 100%
    height = 25
    offset-x = 0%
    offset-y = 0%
    background = ${colors.black}
    foreground = ${colors.white}

    padding = 1
    module-margin = 1

    font-0 = "FiraMono:size=10;1"
    font-1 = "Font Awesome 5 Free:style=Regular:size=10;1"
    font-2 = "Font Awesome 5 Free:style=Solid:size=10;1"
    font-3 = "Font Awesome 5 Brands:style=Regular:size=10;1"
    font-4 = "Noto Sans Mono CJK JP:size=10;1"
    font-5 = "Noto Sans Mono CJK KR:size=10;1"
    font-6 = "Noto Sans Mono CJK SC:size=10;1"
    font-7 = "Noto Sans Mono CJK TC:size=10;1"
    font-8 = "DejaVu Sans Mono:size=10;1"

    modules-left = i3 title
    modules-center =
    modules-right = date

    # tray-position = right

    wm-name = i3
    enable-ipc = true
    scroll-up = i3wm-wsnext
    scroll-down = i3wm-wsprev

[global/wm]
    ;margin-bottom = 0
    ;margin-top = 0

[settings]
    screenchange-reload = true

[module/backlight]
    type = internal/xbacklight
    enable-scroll = true
    format = <label>
    label =  %percentage%%

[module/battery]
    type = internal/battery
    poll-interval = 5
    time-format = %H:%M

    format-charging = <animation-charging> <label-charging>
    label-charging = %percentage%% - %time%

    format-discharging = <ramp-capacity> <label-discharging>
    label-discharging = %percentage%% - %time%

    format-full = <label-full>
    label-full = %percentage%% - Fully Charged!

    ramp-capacity-0 = 
    ramp-capacity-1 = 
    ramp-capacity-2 = 
    ramp-capacity-3 = 
    ramp-capacity-4 = 

    animation-charging-0 = 
    animation-charging-1 = 
    animation-charging-2 = 
    animation-charging-3 = 
    animation-charging-4 = 

    animation-charging-framerate = 750


[module/cpu]
    type = internal/cpu
    interval = 2
    format = <label>
    label =  %percentage:3%%

    ramp-load-0 = ▁
    ramp-load-1 = ▂
    ramp-load-2 = ▃
    ramp-load-3 = ▄
    ramp-load-4 = ▅
    ramp-load-5 = ▆
    ramp-load-6 = ▇
    ramp-load-7 = █

[module/date]
    type = internal/date
    interval = 1
    date = %a %b %d, %Y
    time = %r
    label = %date% - %time%

[module/i3]
    type = internal/i3
    pin-workspaces = false
    strip-wsnumbers = true
    index-sort = true
    enable-click = true
    enable-scroll = true
    wrapping-scroll = false
    reverse-scroll = true
    fuzzy-match = true

    format = <label-state> <label-mode>

    label-mode = %mode%
    label-mode-padding = 2
    label-mode-background = ${colors.red}
    label-mode-foreground = ${colors.black}

    label-focused = %name%
    label-focused-foreground = ${colors.white}
    label-focused-underline = ${colors.white}
    label-focused-padding = 1

    label-unfocused = %name%
    label-unfocused-padding = 1

    label-visible = %name%
    wwbbl-visible-underline = ${colors.white}
    label-visible-padding = 1

    label-urgent = %name%
    label-urgent-foreground = ${colors.black}
    label-urgent-background = ${colors.red}
    label-urgent-padding = 1

[module/memory]
    type = custom/script
    interval = 3
    exec = free -h --si | sed -n '2 p' | awk '{ print $3 }'
    format-prefix=" "

[module/pulseaudio]
    type = internal/pulseaudio

    master-mixer = Master
    use-ui-max = false

    format-volume = <ramp-volume> <label-volume>
    label-volume = %percentage%%

    label-muted =  muted

    ramp-volume-0 = 
    ramp-volume-1 = 
    ramp-volume-2 = 

[module/temperature]
    type = internal/temperature
    interval = 10
    hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input
    warn-temperature = 80

    format = <label>
    label =  %temperature-c%

    format-warn = <label-warn>
    format-warn-underline = ${colors.red}
    label-warn =  %temperature-c%
    label-warn-foreground = ${colors.red}

[module/title]
    type = internal/xwindow
    label = %title%
    label-maxlen = 50

[module/weather]
    type = custom/script
    exec = $HOME/.config/polybar/weather.py
    interval = 900

    format =  <label>

