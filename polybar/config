[colors]
    black = #000000
    gray = #7C7C7C
    red = #FF5722
    white = #FFFFFF

[bar/main]
    monitor = ${env:MONITOR}

    bottom = true
    width = 100%
    height = 25
    offset-x = 0%
    offset-y = 0%
    padding = 1
    module-margin = 1

    font-0 = "FiraMono:size=10;1"
    font-1 = "Font Awesome 5 Free:style=Regular:size=10;1"
    font-2 = "Font Awesome 5 Free:style=Solid:size=10;1"
    font-3 = "Font Awesome 5 Brands:style=Regular:size=10;1"
    font-4 = "Noto Sans Mono CJK JP:size=10;1"
    font-5 = "Noto Sans Mono CJK KR:size=10;1"
    font-6 = "Noto Sans Mono CJK SC:size=10;1"
    font-7 = "Noto Sans Mono CJK TC:size=10;1"
    font-8 = "DejaVu Sans Mono:size=10;1"

    modules-left = i3 title
    modules-center =
    modules-right = pulseaudio backlight battery date

    tray-position = right

    wm-name = i3
    enable-ipc = true
    scroll-up = i3wm-wsnext
    scroll-down = i3wm-wsprev

[settings]
    screenchange-reload = true

[module/backlight]
    type = internal/xbacklight
    enable-scroll = true
    label = SCR: %percentage%%

[module/battery]
    type = internal/battery
    poll-interval = 5
    time-format = %H:%M
    label-charging = CHRG: %percentage%% - %time%
    label-discharging = BAT: %percentage%% - %time%
    label-full = %percentage%% - Fully Charged!

[module/date]
    type = internal/date
    interval = 1
    date = %a %b %d, %Y
    time = %r
    label = %date% - %time%

[module/i3]
    type = internal/i3
    pin-workspaces = false
    strip-wsnumbers = true
    index-sort = true
    enable-click = true
    enable-scroll = true
    wrapping-scroll = false
    reverse-scroll = true
    fuzzy-match = true

    format = <label-state> <label-mode>

    label-mode = %mode%
    label-mode-padding = 2
    label-mode-background = ${colors.red}
    label-mode-foreground = ${colors.black}

    label-focused = %name%
    label-focused-foreground = ${colors.white}
    label-focused-background = ${colors.gray}
    label-focused-padding = 1

    label-unfocused = %name%
    label-unfocused-padding = 1

    label-visible = %name%
    label-visible-padding = 1

    label-urgent = %name%
    label-urgent-foreground = ${colors.black}
    label-urgent-background = ${colors.red}
    label-urgent-padding = 1

[module/pulseaudio]
    type = internal/pulseaudio
    master-mixer = Master
    use-ui-max = false
    label-volume = VOL: %percentage%%
    label-muted = muted

[module/title]
    type = internal/xwindow
    label-maxlen = 50

